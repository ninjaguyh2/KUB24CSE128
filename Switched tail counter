entity JohnsonCounter is 
 Port ( clk : in STD_LOGIC; 
 count: buffer STD_LOGIC_VECTOR(0 to 3):="0000"); 
end JohnsonCounter; 
architecture Behavioral of JohnsonCounter 
is begin 
process(clk) 
begin 
if(clk'event and clk='1')then 
 count(0)<= not (count(3)); 
 for i in 0 to 2 loop 
 count(i+1)<= count(i); 
 end loop; 
end if; 
end process; 
end Behavioral;
